<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/pages">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/ajaxs/*</pattern>
		<pattern>/views/*</pattern>
		<pattern>/logout.html</pattern>
	</excludes>

	<decorator name="resource" page="resource/decorators/main.jsp">
		<pattern>/*/resource/*</pattern>
	</decorator>

	<decorator name="content" page="content/decorators/main.jsp">
		<pattern>/*/content/*</pattern>
	</decorator>

	<decorator name="wechat" page="wechat/decorators/main.jsp">
		<pattern>/*/wechat/*</pattern>
	</decorator>
</decorators>
