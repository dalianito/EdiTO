<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE validation-config SYSTEM "../validation-config.dtd">
<validation-config>
	<range id="formA" show-error="alert" show-type="all">
		<field name="instance(LeaveApplication).employeeUuid" display-name="请假员工姓名">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).departmentUuid" display-name="组织机构">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).position" display-name="职务">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).leaveTypeUuid" display-name="请假类别">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).leaveReason" display-name="请假事由">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).fromDt" display-name="开始时间">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).toDt" display-name="结束时间">
			<depend name="required" />
		</field>
		<field name="instance(LeaveApplication).days" display-name="请假多少天">
			<depend name="required" />
		</field>
	</range>
</validation-config>
