<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE validation-config SYSTEM "../validation-config.dtd">
<validation-config>
	<range id="form" show-error="alert" show-type="all">
		<field name="instance(User).account" display-name="用户名">
			<depend name="required" />
			<depend name="commonChar" />
		</field>
		<field name="instance(User).password" display-name="密码">
			<depend name="required" />
		</field>
		<field name="repPassword" display-name="重复密码">
			<depend name="required" />
		</field>
	</range>
</validation-config>
