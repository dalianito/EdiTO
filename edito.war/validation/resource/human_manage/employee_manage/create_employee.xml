<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE validation-config SYSTEM "../validation-config.dtd">
<validation-config>
	<range id="formA" show-error="alert" show-type="all">
		<field name="instance(Person).personNo" display-name="员工号">
			<depend name="required" />
		</field>
		<field name="instance(Person).name" display-name="姓名">
			<depend name="required" />
		</field>
		<field name="instance(Person).genderUuid" display-name="性别">
			<depend name="required" />
		</field>
		<field name="instance(Person).idNo" display-name="身份证号">
			<depend name="required" />
		</field>
		<field name="instance(Person).educationUuid" display-name="学历">
			<depend name="required" />
		</field>
		<field name="instance(Employee).campusUuid" display-name="校区">
			<depend name="required" />
		</field>
		<field name="instance(Employee).departmentUuid" display-name="组织机构">
			<depend name="required" />
		</field>
		<field name="instance(Person).cellPhone" display-name="手机">
			<depend name="required" />
		</field>
		<field name="instance(Person).email" display-name="电子邮件">
			<depend name="required" />
		</field>
		<field name="instance(Employee).fromDate" display-name="入职时间">
			<depend name="required" />
		</field>
	</range>
</validation-config>
